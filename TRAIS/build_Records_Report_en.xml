<project name="English" default="js.concatenate.lib" basedir=".">
	<loadproperties srcfile="build.properties" />
	<tstamp>
		<format property="build.time"
			pattern = "MMM d, yyyy hh:mm:ss"
			locale="en,US"/>
	</tstamp>
	<target name="js.concatenate">
		<concat destfile="${build.dir}/TRAIS_Records_Report_en.2.0-concatenate.js" >
			<header> /* Build Time: ${build.time} */ </header>
			<filelist  dir="${MOEMap.src.dir}" >
				<file name="REPORT.js" />
			</filelist>			
			<filelist  dir="${src.dir}" >
				<file name="TRAIS_Records_Report_en.2.0.js" />
				<file name="globalConfig.url.js" />
				<file name="reportsName.js" />
				<file name="TRAIS_Records_Report.2.0.js" />
			</filelist>
			<filelist  dir="${MOEMap.src.dir}" >
				<file name="REPORT_tail.js" />
			</filelist>
			<footer> /* Build Time: ${build.time} */ </footer>			
		</concat>
	</target>        
	<target name="js.minify" depends="js.concatenate">
		<apply executable="java" parallel="false">
			<fileset dir="." includes="TRAIS_Records_Report_en.2.0-concatenate.js"/>
			<arg line="-jar"/>
			<arg path="../MOEMap/build/yuicompressor-2.4.7.jar"/>
			<srcfile/>
			<arg line="-o"/>
			<mapper type="glob" from="*.js" to="*-min.js"/>
			<targetfile/>
		</apply>
	</target>
	<target name="js.concatenate.lib"  depends="js.minify">
		<concat destfile="${build.dir}/TRAIS_Records_Report_en.2.0-min.js" >
			<header> /* Build Time: ${build.time} */ </header>
			<filelist  dir="${MOEMap.src.dir}" >
				<file name="underscore-min.js" />
				<file name="removeGoogleMapsDependency.js" />
				<file name="arcgislink-min.js" />
			</filelist>
			<filelist  dir="${src.dir}" >
				<file name="TRAIS_Records_Report_en.2.0-concatenate-min.js" />
			</filelist>
			<footer> /* Build Time: ${build.time} */ </footer>			
		</concat>
	</target>
</project>
